{
  "name": "remind-me",
  "description": "A note taking, alarm setting, and reminder setting app.",
  "author": "Nano-AI",
  "version": "1.0.0",
  "private": true,
  "build": {
    "appId": "com.nanoai.remindme",
    "productName": "Remind Me",
    "files": [
      "dist/**/*",
      "build/**/*",
      "public/main.js"
    ],
    "extends": null
  },
  "main": "public/main.js",
  "homepage": "./",
  "devDependencies": {
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1",
    "electron-reload": "^1.5.0"
  },
  "dependencies": {
    "@date-io/date-fns": "1.3.13",
    "@material-ui/core": "^4.11.2",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.57",
    "@material-ui/pickers": "^3.2.10",
    "@testing-library/jest-dom": "^5.11.8",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.6.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^1.2.0",
    "electron-json-storage": "^4.3.0",
    "nodemon": "^2.0.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "wait-on": "^5.2.1",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "react": "react-scripts start",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "start": "concurrently \"SET BROWSER=none && npm run react\" \"wait-on http://localhost:3000 && npm run electron-nodemon \"",
    "electron-nodemon": "nodemon --watch * --exec \"electron .\"",
    "release": "react-scripts build && electron-builder --publish=always",
    "build": "react-scripts build && electron-builder"  
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
